{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:automergeWeekly",
    "group:recommended"
  ],
  "rangeStrategy": "bump",
  "npm": {
    "minimumReleaseAge": "7 days"
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
